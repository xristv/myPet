<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/petNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:layout_weight="1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Color"
            android:layout_weight="1"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/genderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Gender"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/speciesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Species"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/breedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Breed"
            android:inputType="textPersonName" />
    </LinearLayout>


    <EditText
        android:id="@+id/chipIdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Chip ID"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/distinguishingMarksText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Distinguishing Marks"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/commentsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comments"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ownerNameText"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Owner First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ownerLastName"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Owner Last Name"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ownerAddressText"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Owner Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ownerPhoneText"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Owner Phone"
            android:inputType="number" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/vetNameText"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vet First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vetLastName"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vet Last Name"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/vetAddressText"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vet Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/vetPhoneText"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Vet Phone"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />
</LinearLayout>